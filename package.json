{
  "name": "animavita",
  "version": "1.0.0",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "scripts": {
    "android": "yarn workspace @animavita/expo android",
    "delete:all": "yarn delete:metro-cache && yarn delete:node_modules && yarn delete:yarn.lock",
    "delete:metro-cache": "find . -name \"metro-cache\" -exec rm -rf '{}' +",
    "delete:node_modules": "find . -name \"node_modules\" -exec rm -rf '{}' +",
    "delete:yarn.lock": "find . -name \"yarn.lock\" -exec rm -rf '{}' +",
    "ios": "yarn workspace @animavita/expo ios",
    "lint": "eslint --fix --ext .js,jsx,.ts,.tsx",
    "lint:ci": "eslint --quiet --ext .js,jsx,.ts,.tsx .",
    "lint:fix": "eslint --fix --ext .js,jsx,.ts,.tsx .",
    "start": "yarn workspace @animavita/expo start",
    "storybook": "yarn workspace @animavita/ui storybook",
    "web": "yarn workspace @animavita/expo web",
    "test:expo": "yarn workspace @animavita/expo test",
    "test": "yarn test:expo",
    "test:watch": "yarn workspace @animavita/expo test:watch"
  },
  "lint-staged": {
    "*.yml": [
      "yarn prettier --write",
      "git add"
    ],
    "*.{js,jsx,ts,tsx}": [
      "yarn prettier --write",
      "yarn lint",
      "git add"
    ],
    "package.json": [
      "yarn prettier --write",
      "yarn sort-package-json",
      "git add"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^8.1.0",
    "@commitlint/config-conventional": "^8.1.0",
    "console-helpers": "^0.0.4",
    "husky": "^4.0.6",
    "jest-junit": "^10.0.0",
    "lint-staged": "^9.5.0",
    "prettier": "^1.19.1",
    "sort-package-json": "^1.38.3",
    "typescript": "3.7.4"
  }
}
